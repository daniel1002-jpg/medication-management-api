{
  "name": "medication-management-api",
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx --watch server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:unit:entities": "jest tests/unit/domain/entities",
    "test:unit:cases": "jest tests/unit/application/use-cases",
    "test:unit:repositories": "jest tests/unit/infrastructure/database",
    "test:unit:controllers": "jest tests/unit/interfaces/controllers",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest tests/integration",
    "migrate": "dotenv -e ../../.env -- node-pg-migrate up -m migrations",
    "migrate:test": "dotenv -e ../../.env -- node-pg-migrate up -d $DATABASE_TEST_URL -m migrations",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^7.2.0",
    "baseline-browser-mapping": "^2.9.9",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.2",
    "eslint-plugin-perfectionist": "^5.6.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.13",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  }
}
